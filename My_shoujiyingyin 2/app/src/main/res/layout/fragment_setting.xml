<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#87CEBB">


    <Button
        android:id="@+id/shezhi"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="50sp"
        android:gravity="center|top"
        android:textColor="#ffffff"
        android:text="设置"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/shuimiandingshi"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="80dp"
        android:layout_alignTop="@id/shezhi"
        android:textSize="30sp"
        android:gravity="center"
        android:textColor="#8A2B"
        android:text="睡眠定时"
        />

    <Button
        android:id="@+id/qingchuhuanchun"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="1dp"
        android:textSize="30sp"
        android:gravity="center"
        android:textColor="#8A2B"
        android:text="清除缓存"
        android:layout_below="@+id/shuimiandingshi"
        android:layout_alignParentStart="true"/>

    <Button
        android:id="@+id/lixianwenjian"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="1dp"
        android:textSize="30sp"
        android:gravity="center"
        android:textColor="#8A2B"
        android:text="离线文件"
        android:layout_below="@+id/qingchuhuanchun"
        android:layout_alignParentStart="true"/>


    <Button
        android:id="@+id/tuichu"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="1dp"
        android:textSize="30sp"
        android:gravity="center"
        android:textColor="#8A2B"
        android:text="退出"
        android:layout_below="@+id/lixianwenjian"
        android:layout_alignParentStart="true"/>


</RelativeLayout>

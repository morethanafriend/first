<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.search_main_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/base_bg" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/base_titlebar_bg">
        <TextView
            android:id="@+id/et_search_main_main"
            android:layout_height="50dp"
            android:layout_width="match_parent"/>
        <Button
            android:layout_alignRight="@id/et_search_main_main"
            android:id="@+id/tv_search_main_main"
            android:layout_height="50dp"
            android:layout_width="60dp"
            android:gravity="center"
            android:textColor="@color/color"
            android:text="搜索"
            android:textSize="18dp"
           />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:background="@drawable/base_titlebar_bg">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_search_main_main_single"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="@color/color"
                android:text="单曲"/>


            <TextView
                android:id="@+id/tv_search_main_main_MV"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="@color/color"
                android:text="MV"/>


            <TextView
                android:id="@+id/tv_search_main_main_cluam"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="@color/color"
                android:text="专辑"/>

        </LinearLayout>


    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/mmview_pager_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</LinearLayout>
